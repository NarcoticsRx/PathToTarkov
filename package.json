{
  "name": "path-to-tarkov",
  "displayName": "Path To Tarkov",
  "zipNamePrefix": "Trap-PathToTarkov",
  "version": "3.0.0",
  "main": "src/mod.js",
  "license": "MIT",
  "author": "Trap",
  "akiVersion": ">=3.0.0",
  "scripts": {
    "build:unzipped": "copyfiles -e \"./node_modules/**/*.*\" -e \"./dist/**/*.*\" -e \"./package-lock.json\" -e \"./tsconfig.json\" -e \"./tmp/**/*.*\" -e \"./README.md\" -e \"./mod.code-workspace\" \"./**/*.*\" ./dist",
    "zip:files": "node scripts/create-zip.js",
    "copy:files": "mkdir -p ./dist && cp package.json ./dist && cp README.md ./dist && cp LICENSE ./dist && cp -R config ./dist",
    "build:release": "npm run lint:all && npm run rebuild && npm run copy:files && npm run zip:files",
    "clean": "rimraf mod.zip dist tmp 'src/**/*.js' Trap-PathToTarkov-*",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint --ignore-pattern '*.js' .",
    "lint:all": "npm run prettier:check && npm run lint",
    "rebuild": "npm run clean && npm run build",
    "build": "tsc",
    "test:all": "npm run clean && npm run build && npm run lint:all && npm run test",
    "test": "echo TODO: unit tests"
  },
  "devDependencies": {
    "@types/node": "^14.15.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "bestzip": "2.2.1",
    "copyfiles": "2.4.1",
    "eslint": "7.26.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsyringe": "4.6.0",
    "typescript": "4.6.4",
    "winston": "^3.7.2"
  }
}
