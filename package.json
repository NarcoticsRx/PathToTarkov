{
  "name": "path-to-tarkov",
  "displayName": "Path To Tarkov",
  "fullName": "Trap-PathToTarkov",
  "version": "4.1.4",
  "main": "src/mod.js",
  "license": "MIT",
  "author": "Trap",
  "akiVersion": "3.1.x || 3.2.x || 3.3.x",
  "scripts": {
    "zip:files": "node scripts/create-zip.js",
    "copy:files": "mkdir -p ./dist && cp package.json ./dist && cp README.md ./dist && cp LICENSE ./dist && cp -R config ./dist",
    "build:release": "npm run rebuild && npm run copy:files && npm run zip:files",
    "clean": "rimraf dist tmp 'src/**/*.js' Trap-PathToTarkov*",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint --ignore-pattern '*.js' .",
    "lint:all": "npm run prettier:check && npm run lint",
    "rebuild": "npm run clean && npm run build",
    "build": "tsc",
    "test:all": "npm run lint:all && npm run build:release",
    "test": "tsc --noEmit && npm run lint:all"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.5",
    "@types/node": "^14.15.3",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "bestzip": "2.2.1",
    "eslint": "7.26.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsyringe": "4.6.0",
    "typescript": "4.6.4",
    "winston": "^3.7.2"
  }
}
